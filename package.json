{
  "name": "nestjs-graphql",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prisma:generate": "prisma generate",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "seed:dev": "npx prisma db seed",
    "seed:prod": "npx prisma db seed",
    "generate-schema": "cat src/*/*/*.prisma > src/database/schema.prisma",
    "clean": "rm -rf ./dist",
    "build": "nest build",
    "rebuild": "yarn run clean && yarn run build",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:test": "NODE_ENV=test nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "infra:up": "docker compose -f docker-compose.db.yml --env-file .env up -d",
    "infra:down": "docker compose -f docker-compose.db.yml down",
    "test": "vitest run",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "test:int": "vitest -c ./vitest.config.integration.ts",
    "test:int:ui": "vitest -c ./vitest.config.integration.ts --ui",
    "test:e2e": "vitest -c ./vitest.config.integration.ts",
    "test:e2e:ci": "vitest -c ./vitest.config.ci.ts",
    "test:e2e:docker": "docker compose -f docker-compose.test.yml --env-file env-example-relational -p tests up -d --build && docker compose -f docker-compose.test.yml -p tests exec api /opt/wait-for-it.sh -t 0 localhost:80 -- yarn run test:e2e && docker compose -f docker-compose.test.yml --env-file env-example-relational -p tests down && docker compose -f docker-compose.test.yml --env-file env-example-relational -p tests rm -svf",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@nestjs/apollo": "^13.0.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^10.2.8",
    "@nestjs/graphql": "^13.0.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.4",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^6.1.0",
    "apollo-server-express": "^3.13.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "crypto": "^1.0.1",
    "env-cmd": "^10.1.0",
    "graphql": "^16.10.0",
    "ioredis": "^5.6.0",
    "nestjs-pino": "^4.1.0",
    "nestjs-prisma": "^0.23.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.1.0",
    "reflect-metadata": "^0.2.0",
    "rotating-file-stream": "^3.2.6",
    "runtypes": "^6.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.15",
    "@swc/core": "^1.10.4",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-c8": "^0.30.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "unplugin-swc": "^1.5.1",
    "vitest": "^0.26.2",
    "vitest-mock-extended": "^2.0.2",
    "webpack": "^5.79.0"
  },
  "prisma": {
    "seed": "ts-node src/database/seed.ts",
    "migrateOutput": "src/database/migrations/",
    "schema": "src/database/schema.prisma"
  }
}
